html, body, form, fieldset, p, a, ul, ol, li, div, legend,
label, br, input, button, textarea, h1, h2, h3, h4, h5, strong
	border 0 none
	font-family Helvetica, Arial, Sans-Serif
	font-size 100%
	font-style normal
	font-weight normal
	margin 0
	padding 0

ul
	list-style none outside none

.score
	background-color #333333
	border 2px solid #339933
	font-size 29px
	padding 0 10px
	color #FFFF00

#main
	margin 5px auto
	width 960px

	& .module
		width 270px

	& .content
		height 400px

		& > div
			height 100%

		& h3
			border-bottom 3px solid
			text-align center
			font-weight bold

	& #scoreboard
		background-color #EEEEEE
		border 1px solid #CCCCCC
		text-align center
		padding 0 10px
		font-weight bold
		line-height 50px
		height 50px

		& .name
			color #339933
			font-size 21px

		& #team1
			float left

		& #team2
			float right

	& #content-left
		float left

	& #content-right
		float right

	& #content-center
		margin 0 280px
		width 400px

		& .container
			overflow auto
			height 100%

#narration
	& li
		border-bottom 1px solid #CCCCCC
		background-color #FAFAFA
		padding 25px 20px 20px
		position relative

		&.goal
			background-color #DDFADD

		& .time
			background-color #222222
			position absolute
			text-align center
			font-weight bold
			color #FFFFFF
			width 40px
			left 180px
			top 0

	& .action
		background-color #339933
		position absolute
		padding 2px 5px
		height 16px
		width 16px
		top 0

	& .left
		text-align left
		left 0

	& .right
		text-align right
		right 0

	& .yellowcard
		background-color  yellow

	& .redcard
		background-color red

#notify
	position fixed
	padding 2px
	bottom 5px
	z-index 2
	right 5px

	& li
		background-color #EEEEEE
		border 1px solid #339933
		margin-top 5px
		cursor pointer
		padding 2px

		&:hover .close
			visibility visible

	& span
		border-right 1px solid #CCCCCC
		color #336633
		display inline-block
		font-weight bold
		font-size 16px
		line-height 26px
		padding 0 3px
		text-align center
		vertical-align middle
		width 22px

	& img
		margin-top 1px
		margin-right 2px
		vertical-align text-top

	& p
		display inline-block
		vertical-align middle
		line-height 13px
		font-size 12px
		width 300px

		&.message
			font-weight bold
			line-height 26px
			padding 0 5px

	& .scoreboard
		border-top 1px solid #CCCCCC
		position relative
		overflow hidden
		height 26px

		&  .team
			text-align center
			position absolute
			overflow hidden
			border 0 none
			width 150px
			top 0px

	& .left
		text-align left
		left 0px

	& .right
		text-align right
		right 0px

	& .score
		margin-left -30px
		position absolute
		border-width 1px
		font-size 16px
		padding 0 2px
		width 60px
		top 2.5px
		left 50%

		& span
			line-height normal
			color #FFFF00
			border 0 none
			padding 0

	& .close
		background-color #336633
		line-height normal
		position absolute
		visibility hidden
		color #FFFFFF
		padding 0
		right 5px

#timeline
	background-color #EEEEEE
	border 1px solid #CCCCCC
	margin-top 30px
	padding 5px

	& hr
		background-color #CCCCCC
		position absolute
		border 0 none
		width 25px
		height 4px
		right -3px
		margin 0
		top 31px

	& .teams
		text-align center
		position relative
		padding-top 12px
		line-height 21px
		font-size 14px
		color #336633
		float left
		width 35px

	& .container
		background-color #336633
		position relative
		padding-top 12px
		color #AACCAA
		font-size 9px
		width 910px
		height 42px
		float right

	& #tLine
		background-color #FFFFFF
		z-index 1
		width 0
		left 0

	& table
		border-collapse collapse
		position absolute
		top 0

	& th
		text-align center
		width 18px
		padding 0

	& img
		position absolute
		top 0

	& #line1
	& #line2
		position absolute
		height 16px
		left 0

	& #line1
		top 13px

	& #line2
		top 37px

	& .notify
		position relative
		z-index 2
		top -40px
		color #000000

#score_others
	margin-bottom 15px
	text-align center

	& h2
		margin-bottom 5px

	& h3
		background-color #339933
		line-height 24px
		color #ffffff

	& .content
		line-height 30px
		height 94px

	& .content > div
		overflow hidden
		height 30px

	& ul
		overflow hidden
		height 120px

	& li
		border 1px solid #339933
		display inline-block
		width 180px

	& .score
		font-weight bold
		font-size 24px

.container table
	border-collapse collapse
	width 100%

	& td
		border 1px solid #CCCCCC
		padding 2px

		&.number
			text-align center
			font-weight bold

		&.icon
			width 16px
